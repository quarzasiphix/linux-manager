// setup wordpress - 

sudo wget https://wordpress.org/latest.tar.gz
sudo mkdir ** 
sudo tar -xvzf latest.tar.gz --strip-components=1 -C ./**
sudo chown -R www-data:www-data /var/www/**dir**
sudo chmod -R 755 /var/www/**dir**

// setup db -
sudo mysql -u root -p
CREATE DATABASE **;
CREATE USER '**'@'localhost' IDENTIFIED BY '*pass*';
GRANT ALL PRIVILEGES ON **.* TO '**'@'localhost';
FLUSH PRIVILEGES;
EXIT;

// to reset db - 
DROP DATABASE IF EXISTS **;


server {
    listen 80;
    server_name **domain**;
    root /var/www/**dir**;
    index index.php;

    error_page 404 /index;
    error_log /var/log/nginx/kane.error;
    access_log /var/log/nginx/kane.access;

    location / {
        try_files $uri $uri/ /index.php?$args;
    }

    location ~* /uploads/.*\.php$ {
        return 503;
    }

    location ~ \.php$ {
        include snippets/fastcgi-php.conf;
        fastcgi_pass unix:/run/php/php8.2-fpm.sock;
    }

    location ~ /\.ht {
        deny all;
    }
}


server {
    listen 80;
    server_name **;

    root /var/www/**;
    index index.php;

    location / {
        try_files $uri $uri/ /index.php?$args;
    }

    location ~ \.php$ {
        include snippets/fastcgi-php.conf;
        fastcgi_pass unix:/var/run/php/php8.2-fpm.sock;
    }

    location ~ /\.ht {
        deny all;
    }
}


